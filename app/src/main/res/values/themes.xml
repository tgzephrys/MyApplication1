<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_grey</item>
        <item name="colorPrimaryVariant">@color/light_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <!--天气标题栏样式-->
    <style name="weatherTitleBar">
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/light_grey</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowStyle</item>
    </style>

    <style name="OverflowStyle">
        <item name="android:src">@drawable/menuwhite</item>
    </style>
</resources>